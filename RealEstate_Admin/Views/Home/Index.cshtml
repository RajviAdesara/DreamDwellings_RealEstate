@{
    ViewData["Title"] = "Home Page";
}

@model RealEstate_Admin.Models.HomeModel


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Customer Card -->
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card order-card">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Users <span>| Today</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>@Model.TotalUsers</h6>
                                        @* <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span> *@
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Customer Card -->
                    <!-- Order Card -->
                    <div class="col-xxl-4 col-md-6">

                        <div class="card info-card customers-card" style=" color: saddlebrown;">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Properties <span>| This Year</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-building"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>@Model.TotalProperties</h6>
                                        @* <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">decrease</span> *@
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div><!-- End Order Card -->

                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card agent-card" style=" color: deeppink;">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Agents <span>| Today</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center" style=" background: pink;">
                                        <i class="bi bi-person-workspace"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>@Model.TotalAgents</h6>
                                        @* <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span> *@
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-xxl-6 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Properties by Type</h5>
                                <div style="max-width: 400px; margin: auto;">
                                    <canvas id="propertyChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xxl-6 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Agents by Status</h5>
                                <div style="max-width: 400px; margin: auto;">
                                    <canvas id="agentChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Properties -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">

                            <div class="card-body">
                                <h5 class="card-title">Recent Properties for Sell <span>| Last 10 Listings</span></h5>

                                <table class="table table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Title</th>
                                            <th scope="col">Type</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Location</th>
                                            <th scope="col">Area</th>
                                            <th scope="col">Bedrooms</th>
                                            <th scope="col">Bathrooms</th>
                                            <th scope="col">Listed Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var property in Model.RecentPropertySold)
                                        {
                                                        <tr>
                                                            <td>@property.Title</td>
                                                            <td>@property.PropertyType</td>
                                                            <td>@property.Price.ToString("C")</td>
                                                            <td>@property.Location</td>
                                                            <td>@property.Area</td>
                                                            <td>@property.Bedrooms</td>
                                                            <td>@property.Bathrooms</td>
                                                            <td>@property.ListedDate.ToString("yyyy-MM-dd")</td>
                                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>



                </div>
            </div><!-- End Left side columns -->

        </div>
    </section>

</main><!-- End #main -->

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('propertyChart').getContext('2d');

        var propertyChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Sell', 'Rent', 'Buy'],
                datasets: [{
                    label: 'Properties',
                    data: [
                        @Model.TotalSellProperties,
                        @Model.TotalRentProperties,
                        @Model.TotalBuyProperties
                    ],
                      backgroundColor: ['#3B82F6', '#ff5733', '#14B8A6'], 
                      borderColor: ['#1E40AF', '#c70039', '#0F766E'],
                      borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('agentChart').getContext('2d');

        var agentChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Active', 'Inactive', 'Suspended'],
                datasets: [{
                    label: 'Agents',
                    data: [
                        @Model.TotalActiveAgents,
                        @Model.TotalInactiveAgents,
                        @Model.TotalSuspendedAgents
                    ],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
                    borderColor: ['#218838', '#d39e00', '#c82333'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    });
</script>