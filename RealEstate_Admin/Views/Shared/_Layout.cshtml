<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/assets/img/estateLogo.png" alt="" >
                <span class="d-none d-lg-block">DreamDwellings</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" id="searchInput" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->

                <!-- Logout Icon -->
                <li class="nav-item">
                    <a class="nav-link nav-icon" asp-controller="User" asp-action="Logout" title="Logout" style="color: red; font-size:25px">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </li><!-- End Logout Icon -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bar-chart-line"></i><span>Dashboard</span>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link" asp-controller="Property" asp-action="PropertyList">
                    <i class="bi bi-building"></i><span>Properties</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="UserList">
                    <i class="bi bi-people"></i><span>Users</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="PropertyType" asp-action="PropertyTypeList">
                    <i class="bi bi-house-door"></i><span>Property Type</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Agent" asp-action="AgentList">
                    <i class="bi-person-circle"></i><span>Agents</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Appointment" asp-action="AppointmentList">
                    <i class="bi bi-card-checklist"></i><span>Appointments</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Feedback" asp-action="FeedbackList">
                    <i class="bi bi-chat-dots"></i><span>Feedbacks</span>
                </a>
            </li>

                </ul>
            </li><!-- End Forms Nav -->
        </ul>

    </aside><!-- End Sidebar-->


    <div>
        @RenderBody()
    </div>


    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>Rajvi Adesara</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
